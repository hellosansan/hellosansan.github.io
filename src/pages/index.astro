---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomePosts from "../components/HomePosts.astro";

import { SITE_TITLE } from "../config";

const postImports = import.meta.glob("../posts/*.md");
const posts = (await Promise.all(Object.values(postImports).map((p) => p()))).filter(
  (p) => !p.frontmatter.hidden,
);
---

<!doctype html>
<html lang="zh-cn">
  <BaseHead title={SITE_TITLE} pageType="home" />

  <body>
    <Header title={SITE_TITLE} />

    <main>
      <HomePosts allPosts={posts} />
    </main>

    <Footer />
  </body>
</html>
